{% extends "FrontendBundle::base.html.twig" %}

{% block articles %}
    <div class="span9 blog-posts margin-bottom-40">
        {% for entity in entities %}
            <div class="row-fluid">
                <div class="span4">
                    <img src="{{ asset('uploads/articles/') }}{{entity.image}}" alt="">
                </div>
                <div class="span8">
                    <h2><a href="{{ path('article_view', { 'id': entity.id } ) }}">{{ entity.title }}</a></h2>
                    <ul class="blog-info">
                        <li><i class="icon-calendar"></i> {{ entity.created|date('d-M-Y') }}</li>
                        <li><i class="icon-comments"></i> 17</li>
                        <li>
                            <i class="icon-tags"></i> 
                            {% for category in entity.category %}
                                {{ category.name}}
                                {% if not loop.last %}, &nbsp;{% endif %}                                
                            {% endfor %}
                        </li>
                    </ul>
                    <p>{{ entity.content[:250] ~ '...' }}</p>
                    <a class="more" href="{{ path('article_view', { 'id': entity.id } ) }}">Read more <i class="icon-angle-right"></i></a>
                </div>
            </div>
            {% if not loop.last %}
                <hr class="blog-post-sep">
            {% endif %}                                            
        {%  endfor %}
        
              
    </div>
{% endblock %}