{% extends "LayoutBundle:Backend:security.html.twig" %}

{% block security_content %}

    <form class="form-vertical login-form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="post">
        
        <h3 class="form-title">Create New account</h3>
        <div class="control-group">
            {{ form_widget(form) }}            
        </div>
        <div class="form-actions">
            <button type="submit" id="_submit" name="_submit" class="btn green pull-left">
                Create <i class="m-icon-swapright m-icon-white"></i>
            </button>
        </div>
        <div class="create-account">
            <p>
                Already have an account ? &nbsp;
                <a href="{{ path('fos_user_security_login') }}" id="register-btn" >Login</a>
            </p>
        </div>
    </form>
{% endblock%}
